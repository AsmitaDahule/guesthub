<% layout("layouts/boilerplate") %>

  <div class="row mt-3">
    <div class="col-12 col-lg-8 offset-lg-2">

      <h3 class="px-3">
        <%= listing.title %>
      </h3>

      <div class="card show-card border-0 shadow-sm rounded-4 p-3">
        <img src="<%= listing.image.url %>" class="card-img-top show-img rounded-4" alt="listing-image">
        <div class="card-body">
          <p class="card-text listing-owner px-3 py-1">
            <i>Owned by <%= listing.owner ? listing.owner.username : "Unknown Owner" %></i>
          </p>
          <p class="card-text listing-description px-3">
            <%= listing.description %>
          </p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item listing-price">
              &#8377; <%= listing.price.toLocaleString('en-IN') %> / night
            </li>
            <li class="list-group-item listing-location">
              <%= listing.location %>
            </li>
            <li class="list-group-item listing-country">
              <%= listing.country %>
            </li>
          </ul>
        </div>
      </div>

      <% if(currUser && currUser._id.equals(listing.owner._id)) { %>
        <div class="my-4 d-flex gap-3 px-3">
          <a href="/listings/<%= listing._id %>/edit" class="btn btn-custom-edit">
            Edit
          </a>
          <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
            <button class="btn btn-custom-delete">Delete</button>
          </form>
        </div>
        <% } %>

          <hr>

          <% if(currUser) { %>
            <div class="my-4 px-3">
              <h4>Leave a Review</h4>
              <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

                <div class="mb-3 mt-3">
                  <label for="rating" class="form-label">Rating</label>

                  <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
                      aria-label="No rating." />

                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>

                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>

                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>

                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>

                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                  </fieldset>

                </div>

                <div>
                  <label for="comment" class="form-label">Comments</label>
                  <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control"
                    required></textarea>
                  <div class="invalid-feedback">Please add some comments for reviews</div>
                </div>

                <button class="btn btn-custom-primary mt-3 mb-3">Submit</button>
              </form>
              <hr>
            </div>
            <% } %>
              <div class="mb-5 px-3">
                <p><b class="px-1">All Reviews</b></p>
                <div class="row">
                  <% if(listing.reviews.length===0) { %>
                    <p>No reviews yet. Be the first to leave one!</p>
                    <% } %>
                      <% for(review of listing.reviews){ %>
                        <div class="col-md-6 mb-3">
                          <div class="card h-100 shadow-sm rounded-3 px-2 py-1">
                            <div class="card-body">
                              <h5 class="card-title p-1">
                                <%= review.author.username %>
                              </h5>
                              <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                              <p class="card-text p-1">
                                <%= review.comment %>
                              </p>

                              <% if(currUser && currUser._id.equals(review.author._id)) { %>
                                <form method="POST"
                                  action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                                  <button class="btn btn-sm btn-dark mb-2">Delete</button>
                                </form>
                                <% } %>

                            </div>
                          </div>
                        </div>
                        <% } %>
                </div>
              </div>

    </div>
  </div>
  <hr>
  <div class="container-fluid mb-5 px-4">
    <h4 class="mt-4 mb-3">Related Listings</h4>
    <div class="row g-4">
      <% if (relatedListings.length===0) { %>
        <div class="col-12">
          <p>No related listings found.</p>
        </div>
        <% } else { %>
          <% relatedListings.forEach(r=> { %>
            <div class="col-12 col-md-6 col-lg-3 ">
              <div class="card h-100 shadow-sm rounded-3 border-0 listing-card-hover">
                <img src="<%= r.image.url %>" class="card-img-top rounded-top-3 related-card-img-small"
                  alt="<%= r.title %>">
                <div class="card-body d-flex flex-column">
                  <h6 class="card-title px-2 py-1">
                    <%= r.title %>
                  </h6>
                  <p class="text-muted small px-2 py-0">
                    <%= r.location %>
                  </p>
                  <a href="/listings/<%= r._id %>" class="btn btn-sm btn-custom-outline mt-auto">View</a>
                </div>
              </div>
            </div>
            <% }) %>
              <% } %>
    </div>
  </div>