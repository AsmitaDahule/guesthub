<% layout("/layouts/boilerplate") %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Responsive Filters</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />

  <style>
    #filters {
      display: flex;
      justify-content: flex-start;
      gap: 2rem;
      overflow-x: auto;
      white-space: nowrap;
      scroll-behavior: smooth;
      padding: 1rem 0.5rem;
    }

    #filters::-webkit-scrollbar {
      display: none; /* hide scrollbar */
    }

    .filter {
      text-align: center;
      flex: 0 0 auto;
      opacity: 0.8;
      transition: all 0.3s ease;
    }

    .filter:hover {
      cursor: pointer;
      opacity: 1;
      transform: translateY(-4px);
    }

    .filter i {
      font-size: 1.8rem;
      color: #ff5a5f;
    }

    .filter p {
      font-size: 0.85rem;
      margin-top: 0.3rem;
      font-weight: 500;
      color: #333;
    }

    @media (min-width: 768px) {
      #filters {
        flex-wrap: wrap;
        overflow-x: visible;
        justify-content: center;
      }
    }
  </style>
</head>

<body>

  <% if (selectedCategory) { %>
  <h4>Showing results for "<%= selectedCategory %>"</h4>
<% } %>

<% if (allListings.length === 0) { %>
  <p>No listings found in this category.</p>
<% } else { %>
  <!-- your normal listings cards go here -->
<% } %>


  <div class="container-fluid">
    <div id="filters" class="px-3">
      <a href="/listings/category/Trending" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Trending</p>
        </a>
        <a href="/listings/category/Room" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Room</p>
        </a>
        <a href="/listings/category/Iconic Cities" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Iconic Cities</p>
        </a>
        <a href="/listings/category/Mountains" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Mountains</p>
        </a>
        <a href="/listings/category/Castles" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Castles</p>
        </a>
        <a href="/listings/category/Amazing Pools" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Amazing Pools</p>
        </a>
        <a href="/listings/category/Arctic" class="filter">
          <i class="fa-solid fa-fire"></i>
          <p>Arctic</p>
        </a>
    </div>
  </div>
</body>
</html>

  
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listing of allListings) { %>
      <a href="/listings/<%= listing._id %>" class="listing-link" >
    <div class="card col listing-card">
          <img src="<%= listing.image.url %>"
            class="card-img-top" alt="Listing Image" style="height: 20rem;" 
            />

          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
            <br>
          &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
           </p>
          </div>
        </div>
        </a>
    <% } %>
  </div>

